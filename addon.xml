<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.theblaze"
       name="TheBlaze TV"
       version="0.1.5"
       provider-name="divingmule">
  <requires>
    <import addon="xbmc.python" version="2.26.0"/>
    <import addon="script.common.plugin.cache" version="2.6.1"/>
    <import addon="script.module.requests" version="2.22.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">www.video.theblaze.com</summary>
    <description lang="en_GB">TheBlaze TV features The Glenn Beck Program, plus a full slate of original programming including a nightly news show, documentaries, reality TV, programming for your kids and specials covering a myriad of entertaining and enlightening topics. All programming is broadcast in HD and is available live or On Demand.</description>
    <platform>all</platform>
    <language>en</language>
    <license>GPL-2.0</license>
    <source>https://github.com/divingmule/plugin.video.theblaze</source>
    <forum>https://forum.kodi.tv/showthread.php?tid=112944</forum>
    <website>http://www.blazetv.com</website>
    <news>v0.1.5 (2020-XX-XX)
    - Port to Kodi Leia
    - Work on DRM
    - Python3
    </news>
    <assets>
        <icon>resources/icon.png</icon>
        <fanart>resources/fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
